FROM node:20-alpine

WORKDIR /app

# Install only production deps
COPY package*.json ./
RUN npm ci --omit=dev

# Copy server code (includes assets and cache folders)
COPY server ./server

ENV NODE_ENV=production

# Install curl for healthchecks
RUN apk add --no-cache curl

EXPOSE 3001

CMD ["node", "server/index.js"]
